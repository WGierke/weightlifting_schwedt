<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#153387</item>
        <!-- blue ActionBar -->
        <item name="android:icon">@drawable/icon_gewichtheben_schwedt</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_settings</item>
    </style>

    <style name="TextHeading" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="TextSubHeading" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_subheading</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
    </style>

    <style name="TextContent" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>


    <style name="NewsHeading" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="CompetitionOpponents" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="NewsPreview" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">#999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
    </style>

    <style name="CoverImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">100dip</item>

        <item name="android:layout_marginBottom">0dip</item>
    </style>


</resources>
