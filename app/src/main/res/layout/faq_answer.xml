<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/article_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/CoverImage"
                android:src="@drawable/cover_home"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/faq_heading"
                    style="@style/TextSubHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gültiger Versuch" />

                <TextView
                    android:id="@+id/faq_question"
                    style="@style/TextHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wann ist ein Versuch gültig?" />

                <TextView
                    android:id="@+id/faq_answer"
                    style="@style/TextContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ein Versuch ist gültig, wenn die Hantel ..." />

            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>