<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dip">

    <TextView
        android:id="@+id/buli_table_place"
        style="@style/NewsHeading"
        android:text="1. Platz"
        android:layout_marginTop="3dip"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/buli_table_club"
        style="@style/NewsHeading"
        android:text="AC Chemnitz"
        android:layout_marginTop="3dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/buli_table_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/buli_table_score"
        android:text="4319.8 : 3244.7"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/buli_table_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/buli_table_cardinal_points"
        android:text="12 : 6"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/buli_table_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/buli_table_max_score"
        android:text="890.0"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/buli_table_cardinal_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>